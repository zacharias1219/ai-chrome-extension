{
  "manifest_version": 3,
  "name": "Ai Assistant",
  "version": "1.0",
  "description": "Ai in your daily life",
  "permissions": ["activeTab", "scripting", "contextMenus", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/marked.min.js",
        "content/promptUi.js",
        "content/promptHandler.js",
        "content/index.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "asset/logo.png",
    "48": "asset/logo.png",
    "128": "asset/logo.png"
  }
}
